{
  "file_types": {
    "Metal": ["h", "H"],
  },
  "languages": {
    "Metal": {
      "formatter": "language_server",
      "format_on_save": "on",
    },
  },
  "lsp": {
    "metal-analyzer": {
      "initialization_options": {
        "metal-analyzer": {
          "formatting": {
            "enable": true,
          },
          "diagnostics": {
            "onType": true,
            "onSave": true,
            "debounceMs": 300,
            "scope": "workspace",
          },
          "indexing": {
            "enable": true,
            "concurrency": 8,
            "maxFileSizeKb": 1024,
            "projectGraphDepth": 3,
            "projectGraphMaxNodes": 256,
            "excludePaths": ["external/uzu-plus"],
          },
          "compiler": {
            "includePaths": [],
            "extraFlags": [],
            "platform": "macos",
          },
          "logging": {
            "level": "info",
          },
        },
      },
    },
  },
}
