{
  "metal-analyzer.formatting.enable": true,
  "metal-analyzer.diagnostics.onType": true,
  "metal-analyzer.diagnostics.onSave": true,
  "metal-analyzer.diagnostics.debounceMs": 300,
  "metal-analyzer.diagnostics.scope": "workspace",
  "metal-analyzer.indexing.enable": true,
  "metal-analyzer.indexing.concurrency": 4,
  "metal-analyzer.indexing.maxFileSizeKb": 1024,
  "metal-analyzer.indexing.projectGraphDepth": 3,
  "metal-analyzer.indexing.projectGraphMaxNodes": 256,
  "metal-analyzer.indexing.excludePaths": ["external/uzu-plus"],
  "metal-analyzer.compiler.platform": "macos",
  "metal-analyzer.logging.level": "info",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit",
  },
  "rust-analyzer.rustfmt.extraArgs": ["+nightly"],
  "rust-analyzer.check.workspace": false,
  "rust-analyzer.cargo.allTargets": false,
  "rust-analyzer.check.noDefaultFeatures": true,
  "rust-analyzer.testExplorer": true,
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
  },
  "[swift]": {
    "editor.formatOnSave": true,
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml",
  },
  "[metal]": {
    "editor.defaultFormatter": "eugenebokhan.metal-analyzer",
    "editor.formatOnSave": true,
  },
  "files.associations": {
    "*.h": "metal",
  },
}
